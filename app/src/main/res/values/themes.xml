<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileInay" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/bg_utama</item>

    </style>

    <style name="TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/bg_utama</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="TextView2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/bg_utama</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="ForgotPassword">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="btn_klik">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="subTitle">
        <item name="android:textColor">@color/bg_utama</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="SubJudul">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="btn_nav_text">

        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="textNilai">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="textFillColor">@color/black</item>

    </style>
    
    <style name="textCut">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>